{% extends '../template/templateLog.twig' %}
{% block content %}
{% for error in errors %}
            <div class="alert alert-danger col-md-12" role="alert">
                {{error.message}}
            </div>
{% endfor %}

<link href="../css/style.css" rel="stylesheet">
<section style="margin-top: 3%">
  <div class="center-block">
    <form action="/login" method="POST" class="form-signin">
      <img class="mb-4" src="https://png.icons8.com/metro/1600/ticket.png" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <div class="row">
        <div class="form-group col-md-6" style="text-align: center">
          <label for="username" class="sr-only">Username</label>
          <input name="username" type="text" id="username" class="form-control" placeholder="username" required="" autofocus="">
        </div>
        <div class="form-group col-md-6">
          <label for="password" class="sr-only">Password</label>
          <input name="password" type="password" id="password" class="form-control" placeholder="Password" required="">
        </div>
      </div>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <div class="row">
        <div class="col-md-4"></div>
        <button class="btn btn-lg btn-primary btn-block col-md-4 mb-3" type="submit">Sign in</button>
        <div class="col-md-4"></div>
      </div>

      <p><a href="/register" class="mt-5 mb-3 text-muted">Not register yet ? Register now !</a></p>
    </form>
  </div>
</section>

{% endblock %}
